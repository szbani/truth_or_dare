<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.FvM.ui.home.home"
        android:label="@string/menu_home"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_nav_home_to_nav_player"
            app:destination="@id/nav_player" />
    </fragment>

    <fragment
        android:id="@+id/nav_player"
        android:name="com.example.FvM.ui.players.players"
        android:label="players"
        tools:layout="@layout/players_fragment" >
        <action
            android:id="@+id/action_nav_player_to_nav_settings"
            app:destination="@id/nav_settings" />
        <action
            android:id="@+id/action_nav_player_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.FvM.ui.settings.settings"
        android:label="@string/menu_settings"
        tools:layout="@layout/settings_fragment" >
        <action
            android:id="@+id/action_nav_settings_to_nav_player"
            app:destination="@id/nav_player" />
    </fragment>



</navigation>