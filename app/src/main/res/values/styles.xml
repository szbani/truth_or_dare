<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="item_LVL_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="item_LVL_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_game_round_right</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="item_LVL_3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="player_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>
    <style name="player_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="player_image_e">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/ic_edit</item>
        <item name="android:contentDescription">@string/player_edit</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>
    <style name="player_image_d">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@drawable/ic_delete_player</item>
        <item name="android:contentDescription">@string/player_delete</item>
    </style>
    <style name="game_player_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">0.75</item>
        <item name="android:elevation">30dp</item>
        <item name="android:shadowRadius">50</item>
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:text">Sample</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">34sp</item>
    </style>
    <style name="game_q_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/hello_blank_fragment</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">@+id/coordinatorLayout</item>
        <item name="layout_constraintStart_toStartOf">@+id/coordinatorLayout</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
    <style name="dialog_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="dialog_Fields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>