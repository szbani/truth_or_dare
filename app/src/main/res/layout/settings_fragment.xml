<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.settings"
    android:background="@color/white2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            style="@style/item_LVL_1"
            android:text="@string/menu_settings"
            android:textColor="@color/cardview_dark_background" />
        <TextView
            android:id="@+id/packok"
            style="@style/item_LVL_2"
            android:text="@string/packs"
            android:textColor="@color/cardview_dark_background" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="176dp">

            <LinearLayout
                android:id="@+id/Packs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/checkBox1"
                    style="@style/item_LVL_3"
                    android:text="@string/Default" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    style="@style/item_LVL_3"
                    android:text="@string/pack1" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    style="@style/item_LVL_3"
                    android:text="@string/pack2" />


            </LinearLayout>
        </ScrollView>


        <TextView
            android:id="@+id/fiokText"
            style="@style/item_LVL_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fiok"
            tools:layout_editor_absoluteX="-185dp"
            tools:layout_editor_absoluteY="526dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <Button
                android:id="@+id/login_btn"
                style="@style/item_LVL_3"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn"
                android:text="@string/bejelentkezes"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.373"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.695" />

            <TextView
                android:id="@+id/textView4"
                style="@style/item_LVL_3"
                android:layout_width="222dp"
                android:layout_height="36dp"
                android:text="Jelentkezz be!"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/login_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.372"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.767" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/other"
            style="@style/item_LVL_2"
            android:text="@string/other" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/kimaradas"
            style="@style/item_LVL_3"
            android:text="@string/option2" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/random"
            style="@style/item_LVL_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/option3" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>